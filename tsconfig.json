{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ESNext",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": "src",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["src/**/*"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
  }